{
  "name": "notion-like-editor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm type-check && vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "pnpm build && pnpm preview",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "prettier '(src/**/*.{html,ts,js}|*.{html,ts,js})' --write && eslint --ext js,html,ts --fix",
    "test": "jest",
    "test:w": "jest --updateSnapshot && jest --watch",
    "postinstall": "husky install",
    "produce": "git checkout main && git pull origin main && git merge dev && git push && git checkout dev && git push"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.2",
    "typescript-eslint": "0.0.1-alpha.0",
    "vite": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "(src/**/*.{tsx,ts,js}|*.{tsx,ts,js})": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{!(min).js,json,!(min).css,!(min).scss,md}": [
      "prettier --write"
    ]
  }
}
